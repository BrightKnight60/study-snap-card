# Backend Environment Variables
# Copy this file to backend/.env and fill in your actual values

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Flask settings
FLASK_DEBUG=True
FLASK_PORT=5001  # Port for Flask backend (default 5001 to avoid macOS AirPlay conflict)
SECRET_KEY=your-secret-key-here

# Database settings
DATABASE_PATH=flashcards.db

# File upload settings
UPLOAD_FOLDER=temp_uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# CORS settings (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080,http://127.0.0.1:5173,http://127.0.0.1:8080